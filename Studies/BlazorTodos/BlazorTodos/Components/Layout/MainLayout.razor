@inherits LayoutComponentBase
@using BlazorTodos.Components.Modals

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" />
<MudSnackbarProvider/>
<MudDialogProvider />

<MudLayout>
    <MudAppBar>
        <MudText Typo="@Typo.h5" Color="@Color.Inherit">TO DO</MudText>
        <MudIconButton Icon="@Icons.Material.Outlined.Home" Color="@Color.Inherit" Href="/"></MudIconButton>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Outlined.List" Color="@Color.Inherit"></MudIconButton>
        <MudSwitch @bind-Value="_isDarkMode" Color="Color.Primary" Class="ma-4" T="bool" Label="Dark Mode" Disabled="false" />
    </MudAppBar>
    <MudMainContent>
        <MudContainer>
            @Body            
        </MudContainer>
    </MudMainContent>
</MudLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
@code{
    private bool _isDarkMode = false;

    
}
