@page "/"
@using Repositories;

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>
<PageTitle>Home</PageTitle>
<MudText Typo="@Typo.h2">@message</MudText>
<MudButton @OnClick="@getTodo">Adicionar e Extrair</MudButton>
<MudText Typo="@Typo.body2">@todo.Title / @todo.Description</MudText>



@code{
    Models.Todo todo = new Models.Todo();
    string message;
    public TodoRepositories todoRepositories = new TodoRepositories();
    public void getTodo()
    {
        message = todoRepositories.AddNewTodo(new Models.Todo() { id = 1, Title = "Teste", Description="Descrição de teste", isDone=false });
        todo = todoRepositories.ReturnTodoById(1);
    }
}
